<div class="row">
  <div class="auth-container">
    <h1>Login</h1>

    <%= @message if @message %>

    <%= form_for :users, :html => { :id => "new_session" } do |f| %>
       <%= f.label :username %>
       <%= f.text_field :username, class: 'form-control' %>

       <%= f.label :password %>
       <%= f.password_field :password, class: 'form-control' %>

       <%= f.submit "Login", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
