                <ul class="list-unstyled">
                  <li><%= render html: chord.render_chord.html_safe %></li>
                </ul>
              </div>
            <% end %>
          </div>
          <div class='tab-pane fade' id='echords'>
            <% @echords.each do |chord| %>
              <div class="inline-chords">
                <ul class="list-unstyled">
                  <li><%= render html: chord.render_chord.html_safe %></li>
